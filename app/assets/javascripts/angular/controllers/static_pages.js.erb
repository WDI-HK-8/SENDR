app.controller('StaticPagesCtrl', ['$scope', '$auth', function($scope, $auth){
  $scope.message = "Hello World!";
  $scope.logout = function () {
    $auth.signOut().then(function(resp) {
      console.log(resp);
    }).catch(function(resp) {
      console.log(resp);
    });
  };
  $(document).ready(function(){
    //login modal
    $("#myBtn").click(function(){
        $("#myModal").modal();
    });
    $("#signupBtn").click(function(){
        $("#signupModal").modal();
    });
  })
}]);