app.controller('EmailsScheduledCtrl', ['$scope', '$http', '$location', '$auth', function($scope, $http, $location, $auth){

  var url = "<%= ENV['URL'] %>" || "http://localhost:3000";

  $http.get(url + '/scheduled').success(function(response){
    console.log(response);
    $scope.emails = response;
  });

  $scope.logout = function () {
    $auth.signOut().then(function(resp) {
      console.log(resp);
      location.reload();
    }).catch(function(resp) {
      console.log(resp);
    });
  };


  $scope.delete = function (id) {
      $http.delete(url + '/emails/' + id).success(function(response){
      console.log(response)
      location.reload();
    });
  };

}]);
